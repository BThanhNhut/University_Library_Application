<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietTraSach"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue1"
        android:padding="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"
            android:padding="14dp"
            android:id="@+id/img_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Tra sach"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/thao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Ma phieu muon:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_maphieumuon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/thao1"
            android:text="M001"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/thao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thao1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Ten doc gia:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_tendocgia_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thao1"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/thao2"
            android:text="Ho Phuong Thao"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/thao3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thao2"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="THONG TIN SACH TRA"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listview_trasach"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/thao3"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_tra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listview_trasach"
            android:layout_marginLeft="260dp"
            android:text="Tra" />

    </RelativeLayout>
</LinearLayout>