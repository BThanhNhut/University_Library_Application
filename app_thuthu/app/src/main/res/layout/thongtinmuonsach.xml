<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_mamuon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phiếu mượn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_docgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_mamuon"
                android:text="Tên độc giả"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_tieude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_docgia"
                android:text="Số sách mượn: "
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_sosach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_mamuon"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/txt_tieude"
                android:text="số sách mượn: "
                android:textColor="@color/black" />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:maxHeight="100dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/book_st5"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>